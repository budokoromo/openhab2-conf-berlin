rule "Shutters Sleeping Room"
when
	Item shutSleep received command
then
    logInfo(filename, "shutSleep. Received command = [{}]", receivedCommand)
	shutSleepN.sendCommand(receivedCommand)
	shutSleepS.sendCommand(receivedCommand)
end	



rule "Shutters Bath"
when
	Item shutBath received command
then
    logInfo(filename, "shutBath. Received command = [{}]", receivedCommand)
	shutBathN.sendCommand(receivedCommand)
	shutBathS.sendCommand(receivedCommand)
end	



rule "Shutters Bath Cat"
when
	Item shutBathCat received command ON
then
    logInfo(filename, "shutBathCat. Received command = [{}]", receivedCommand)
	shutBathS.sendCommand(85)
end	


rule "Shutters Sleep Cat"
when
	Item shutSleepCat received command ON
then
    logInfo(filename, "shutSleepCat. Received command = [{}]", receivedCommand)
	shutSleepS.sendCommand(85)
end	





